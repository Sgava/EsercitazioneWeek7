@model PiattoViewModel
@{

    ViewBag.CreationMode = false;
}

<h1>Vuoi Eliminare questo Piatto</h1>

<form class="bg-dark m-3 rounded" method="post">

    <partial name="_Form" model=Model />

    <div class="form-group">
        <label asp-for="Descrizione"></label>
        <input asp-for="Descrizione" class="form-control" />
        <span asp-validation-for="Descrizione" class="text-danger"></span>
    </div>

    <div class="text-center my-3">
        <input type="submit" value="Elimina" class="btn btn-light btn-outline-danger rounded text-center mb-2" />        
        <a class="btn btn-light btn-outline-dark rounded mb-2" asp-controller="Piatti" asp-action="Index">Indietro</a>
    </div>
</form>